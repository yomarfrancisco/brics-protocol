{
  "name": "brics-protocol",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "clean": "rimraf cache artifacts typechain",
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test --grep '(unit|fast|invariants|integration)'",
    "test:replay": "hardhat test --grep 'replay'",
    "test:replay:local": "CI_SIGNER_PRIVKEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 hardhat test --grep 'replay'",
    "test:prop": "PRICING_PROVIDER=replay BANK_DATA_MODE=off hardhat test --grep 'property'",
    "test:invariants": "PRICING_PROVIDER=replay BANK_DATA_MODE=off hardhat test --grep 'invariant'",
    "gas": "REPORT_GAS=1 hardhat test",
    "gas:bounds": "GAS_REPORT=true yarn hardhat test test/fast/amm/instant-bounds-levels.spec.ts",
    "gas:core": "GAS_REPORT=true yarn hardhat test test/fast/amm/instant-lane.spec.ts",
    "gas:budget": "ts-node scripts/check-gas-budget.ts",
    "gas:trend": "ts-node --transpile-only scripts/gas/run-and-append.ts",
    "gas:chart": "ts-node --transpile-only scripts/gas/chart.ts",
    "gas:summary": "ts-node --transpile-only scripts/gas/summary.ts",
    "release:next": "ts-node --transpile-only scripts/release/next-version.ts",
    "release:notes": "ts-node --transpile-only scripts/release/notes.ts",
    "release:dry": "ts-node --transpile-only scripts/release/dry-run.ts",
    "audit:manifest": "ts-node --transpile-only scripts/audit/gen-manifest.ts",
    "audit:fixtures": "ts-node --transpile-only scripts/audit/fixtures-index.ts",
    "audit:tests": "ts-node --transpile-only scripts/audit/test-attest.ts",
    "audit:events": "hardhat compile && ts-node --transpile-only scripts/audit/events-docs.ts",
    "audit:bundle": "ts-node --transpile-only scripts/audit/bundle.ts",
    "audit:diff": "ts-node --transpile-only scripts/audit/diff.ts",
    "coverage": "COVERAGE=1 hardhat coverage --solcoverjs ./.solcover.js",
    "coverage:heavy": "COVERAGE=1 COVERAGE_HEAVY=1 hardhat coverage --solcoverjs ./.solcover.js",
    "slither": "slither . --config .slither.json --print human-summary",
    "slither:sarif": "slither . --config .slither.json --sarif slither.sarif",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:dev": "hardhat run --network hardhat scripts/deploy.ts",
    "deploy:localhost": "hardhat run --network localhost scripts/deploy.ts",
    "deploy:sepolia": "hardhat run --network sepolia scripts/deploy.ts",
    "deploy:dev:legacy": "hardhat run --network hardhat deploy/00_env.ts && hardhat run --network hardhat deploy/01_core.ts && hardhat run --network hardhat deploy/02_finance.ts && hardhat run --network hardhat deploy/04_oracle.ts && hardhat run --network hardhat deploy/03_tranche.ts && hardhat run --network hardhat deploy/05_issuance_and_claims.ts && hardhat run --network hardhat deploy/90_roles_and_params.ts && hardhat run --network hardhat deploy/99_report.ts",
    "deploy:sepolia:legacy": "hardhat run --network sepolia deploy/00_env.ts && hardhat run --network sepolia deploy/01_core.ts && hardhat run --network sepolia deploy/02_finance.ts && hardhat run --network sepolia deploy/04_oracle.ts && hardhat run --network sepolia deploy/03_tranche.ts && hardhat run --network sepolia deploy/05_issuance_and_claims.ts && hardhat run --network hardhat deploy/90_roles_and_params.ts && hardhat run --network hardhat deploy/99_report.ts",
    "verify:all": "ts-node scripts/verifyAll.ts",
    "fixtures:gen": "ts-node scripts/fixtures/generate.ts",
    "fixtures:ci": "FIXTURE_SEED=42 yarn fixtures:freeze",
    "fixtures:freeze": "hardhat run scripts/fixtures/generate.ts && ts-node scripts/freeze-fixture.ts && yarn fixtures:hashcheck",
    "fixtures:check": "ts-node --transpile-only scripts/fixtures/check.ts",
    "validate:env": "ts-node scripts/validate-ci-env.ts",
    "fixtures:hashcheck": "ts-node scripts/verify-fixture-hash.ts",
    "fixtures:summary": "ts-node scripts/print-fixture-summary.ts",
    "smoke:dev": "ts-node --transpile-only scripts/smoke-dev.ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@octokit/rest": "^20.0.2",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "archiver": "^7.0.1",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.1.1",
    "eth-gas-reporter": "^0.2.27",
    "ethers": "^6.11.1",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^8.0.3",
    "mocha-junit-reporter": "^2.2.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "solhint": "^4.5.3",
    "solidity-coverage": "0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "yargs": "^18.0.0"
  }
}
